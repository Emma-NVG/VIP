{{>partialNavigation}}

<div>
    {{#each listOfPerson}}
        <div class="list_photo_name">
            <img src="/images/vip/{{this.PHOTO}}">
            <a href="/person/{{this.NAME}}"><span>{{this.FIRSTNAME}} {{this.NAME}}</span></a>
        </div>
    {{/each}}
</div>

<div class="vip_details">
    {{#each vipPerson}}
        <img src="/images/vip/{{../photoProfile.PHOTO}}">
        <p>Nom : {{this.FIRSTNAME}} {{this.NAME}}</p>
        <p>Date de naissance : {{formatDate this.DATE 'dddd D MMMM YYYY'}} </p>
        <p>Nationalité : {{../nationality.NAT}}</p>

        <!--Acteur ou realisateur-->
        <p>Profession : </p>
        <p>Principal(aux) film(s) : </p>

        <!--Couturier ou Mannequin-->
        <p>Profession : </p>
        <p>Principal(aux) défilé(s) : </p>

        <!--Chanteur-->
        <p>Profession : </p>
        <p>Principal(aux) album(s) : </p>

        <p>Mariage(s) : </p>
            {{#each ../mariage}}
                <span> - <a href="/person/{{this.NOM}}">{{this.NOM}}</a> ({{formatDate this.DATE 'MMMM YYYY'}} {{#if this.DATEFIN}} --> {{formatDate this.DATEFIN 'MMMM YYYY'}} {{/if}}) lieu : {{this.LIEU}}</span><br>
            {{/each}}
        <p>Liaison(s) : </p>
            {{#each ../liaison}}
                <span> - <a href="/person/{{this.NOM}}">{{this.NOM}}</a> ({{formatDate this.DATE 'MMMM YYYY'}}) raison fin liaison : {{this.MOTIF}}</span><br>
            {{/each}}
        <p>Qui suis-je ? : {{this.TXT}}</p>
    {{/each}}
    {{#each galerie}}
        <img src="/images/vip/{{this.PIC}}" class="gallery_img">
    {{/each}}
</div>



