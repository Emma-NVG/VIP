<form>
    <h2>Ajout VIPs</h2>
    <label for="name">Nom* : </label><input type="text" name="name" id="name" required><br>
    <label for="fname">Prénom* : </label><input type="text" name="fname" id="fname" required><br>

    <label for="sexe">Sexe : </label>
    <select type="text" name="sex" id="sex">
        <option value="F">Féminin</option>
        <option value="M">Masculin</option>
    </select><br>

    <label for="date">Date de naissance : </label><input type="date" name="date" id="date"><br>

    <label for="nat">Nationalité : </label>
    <select type="text" name ="nat" id ="nat">
        {{#each nationality}}
            <option value="{{this.NAT_NUM}}">{{this.NAT}}</option>
        {{/each}}
    </select><br>

    <label for="com">Commentaire : </label><textarea name="com" id="com"></textarea><br>
    <label for="img">Sélectionner l'image</label><input type="image" name="img" id="img"><br>
    <label for="subject">Sujet : </label><input type="text" name="img" id="subject"><br>
    <label for="com_img">Commentaire : </label><textarea name="com_img" id="com_img"></textarea><br>

    <input type="submit" name="submit" id="submit">
</form>
