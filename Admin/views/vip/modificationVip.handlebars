<section class="row">
    <div class="col-4">
        {{>partialNavigationVip}}
    </div>
    <div class="col-8">
        {{#if vipSelected}}
            {{#each vipSelected}}
                <form class="vips" action="/modifyVip" method="post">
                    <fieldset>
                        <legend>Modification VIPs</legend>
                        <input type="hidden" name="id" value="{{this.NUM}}">
                        <label for="name">Nom* : </label><input type="text" name="name" id="name" required size="20" pattern="[A-Za-z].{2,}" value="{{this.NAME}}"><br>
                        <label for="fname">Prénom* : </label><input type="text" name="fname" id="fname" required size="20" pattern="[A-Za-z].{2,}" value="{{this.FIRSTNAME}}"><br>

                        <label for="sexe">Sexe : </label>
                        <select type="text" name="sex" id="sex">
                            <option value="F" {{#ifCond this.SEXE '==' "F"}}selected{{/ifCond}}>Féminin</option>
                            <option value="M" {{#ifCond this.SEXE '==' "M"}}selected{{/ifCond}}>Masculin</option>
                        </select><br>

                        <label for="date">Date de naissance : </label><input type="date" name="date" id="date" value="{{formatDate this.DATE 'YYYY-MM-DD'}}"><br>

                        <label for="nat">Nationalité : </label>
                        <select type="text" name ="nat" id ="nat">
                            {{#each ../nationalities}}
                                <option value="{{this.NATNUM}}" {{#ifCond ../this.NAT '==' this.NATNUM }}selected{{/ifCond}}>{{this.NATNOM}}</option>
                            {{/each}}
                        </select><br>

                        <label for="com">Commentaire : </label><textarea name="com" id="com">{{this.TXT}}</textarea><br>

                        <input type="submit" name="submit" id="submit">
                    </fieldset>
                </form>
            {{/each}}
        {{else}}
            <form class="vips" action="/vipChoice" method="post">
                <fieldset>
                    <legend>Modification VIPs</legend>
                    <label for="vip">Choisissez un vip : </label>
                    <select name ="vip" id ="vip">
                        {{#each vips}}
                            <option value="{{this.NUM}}">{{this.FNAME}} {{this.NAME}}</option>
                        {{/each}}
                    </select><br>
                    <input type="hidden" name="action" value="M">
                    <input type="submit" name="submit" id="submit">
                </fieldset>
            </form>
        {{/if}}
    </div>
</section>




